{
   "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
      "vmName": {
         "type": "string"
      },
      "location": {
         "type": "string"
      },
      "osVersion": {
         "type": "string",
         "allowedValues": [
            "win11-21h2-avd",
            "win11-21h2-ent",
            "win10-21h2-avd-g2",
            "win10-21h2-avd",
            "21h1-evd-g2",
            "21h1-evd",
            "20h2-evd-g2",
            "20h2-evd",
            "20h1-evd-g2",
            "20h1-evd",
            "19h2-evd-g2",
            "19h2-evd",
            "win10-21h2-ent",
            "win10-21h2-ent-g2",
            "21h1-ent-g2",
            "21h1-ent",
            "20h2-ent-g2",
            "20h2-ent",
            "20h1-ent-g2",
            "20h1-ent",
            "19h2-ent-g2",
            "19h2-ent"
         ],
         "defaultValue": "20h2-evd",
         "metadata": {
            "description": "The OS type for the VM. EVD is Multi-Session, ENT is Enterprise (Single Session)"
         }
      }
   },
   "functions": [],
   "variables": {},
   "resources": [
      {
         "type": "Microsoft.Compute/virtualMachines/extensions",
         "apiVersion": "2018-06-01",
         "name": "[concat(parameters('vmName'), '/PSExtensionInstall/', 'LocaleDe')]",
         "location": "[parameters('location')]",
         "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.7",
            "autoUpgradeMinorVersion": true,
            "settings": {
               "fileUris": [
                  "https://raw.githubusercontent.com/Bistech/Azure/master/WVD/Image/CustomScriptExtensions/downloadLocaleDeAIB.ps1"
               ],
               "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File downloadLocaleDeAIB.ps1 ', parameters('osVersion'))]"
            }
         }
      }
   ],
   "outputs": {}
}